<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            display: flex;
            align-items: center;
            flex-direction: column;
            height: 90vh;
            overflow: hidden; 
        }

        ul {
            list-style: none;
            padding: 0px;
            width: 100%;
            border-top: 1px solid black; 
            padding: 20px; 

        }

        ul li {
            padding: 10px;
            margin: 10px 0px 10px 0px;
            border: 1px solid black; 
        }

        .perfil {
            border-radius: 50%;
        }
        .content{
            border: 1px solid black; 
            border-radius: 10px;
            padding: 5px 20px 20px 10px;
            width: 100%; 
        }
    </style>
    <script>
        // Função para buscar mensagens via AJAX
        async function fetchMessages() {
            try {
                const response = await fetch('/api/messages');
                const messages = await response.json();

                // Atualiza a lista de mensagens no HTML
                const messagesList = document.getElementById('messages');
                messagesList.innerHTML = ''; // Limpa mensagens antigas
                messages.forEach(msg => {
                    const li = document.createElement('li');
                    li.innerHTML = `
                        <div class="message" style="display: flex; flex-direction: row;">       
                            <div style="display: flex; padding-top: 0px;">
                            <div class="perfil" style=" border: 1px solid black; width: 35px; height: 35px; background-image: url(${msg.foto}); background-size: cover; background-position: center; margin-right: 10px;">
                            </div>
                            </div>
                            <div class="content" >
                                <strong>${msg.usuario}</strong>
                                <p>${msg.texto}</p>
                                <code style="font-size: 10px;">${msg.created}</code>
                            </div>
                            </div>`;
                    messagesList.appendChild(li);
                });
            } catch (error) {
                console.error('Erro ao buscar mensagens:', error);
            }
        }

        // Função para enviar mensagem
        async function sendMessage(event) {
            event.preventDefault(); // Evita recarregar a página
            const input = document.getElementById('messageInput');
            const usuario = "<%= user.username %>"; // Insira o nome do usuário renderizado pelo servidor
            const texto = input.value.trim();

            if (!texto) {
                alert('Digite uma mensagem!');
                return;
            }

            try {
                const response = await fetch('/api/messages', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ usuario, texto }),
                });

                if (response.ok) {
                    input.value = ''; // Limpa o campo de input
                    fetchMessages(); // Atualiza a lista de mensagens
                } else {
                    console.error('Erro ao enviar mensagem');
                }
            } catch (error) {
                console.error('Erro ao enviar mensagem:', error);
            }
        }

        // Atualiza as mensagens a cada 500ms
        setInterval(fetchMessages, 500);

        // Inicializa as mensagens ao carregar a página
        window.onload = fetchMessages;
    </script>
</head>

<body>
    <h1>Bem-vindo ao Chat</h1>
    <div style="width: 100%; height: 90%; overflow-y: scroll;" >
        <ul id="messages">
            <!-- As mensagens serão carregadas aqui dinamicamente -->
        </ul>
    </div>

    <!-- Formulário para enviar mensagens -->
    <form id="messageForm" onsubmit="sendMessage(event)">
        <input type="text" id="messageInput" placeholder="Digite sua mensagem..." />
        <button type="submit">Enviar</button>
    </form>
</body>

</html>